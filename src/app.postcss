@tailwind base;
@tailwind components;
@tailwind utilities;

@layer base {
	:root {
		--background: 40 88% 74%;
		--foreground: 112 11% 40%;

		--muted: 240 4.8% 95.9%;
		--muted-foreground: 240 3.8% 46.1%;

		--popover: 40 88% 74%;
		--popover-foreground: 112 11% 40%;

		--card: 0 0% 100%;
		--card-foreground: 240 10% 3.9%;

		--banner: 112 11% 40%;
		--banner-foreground: 0 0% 98%;

		--border: 111 21% 52%;
		--input: 111 21% 52%;

		--primary: 240 5.9% 10%;
		--primary-foreground: 0 0% 98%;

		--secondary: 240 4.8% 95.9%;
		--secondary-foreground: 240 5.9% 10%;

		--accent: 40 74% 72%;
		--accent-foreground: 112 11% 30%;

		--destructive: 0 72.2% 50.6%;
		--destructive-foreground: 0 0% 98%;

		--ring: 240 10% 3.9%;

		--radius: 0.5rem;
	}

	/* TODO: */
	/* .dark { */
	/* TODO */
	/* } */
}

@layer base {
	* {
		@apply border-border;
	}

	/* need to set this for overscroll to look nice */
	body {
		@apply bg-banner text-banner-foreground;
	}

	/* but these are the actual background/foreground colors */
	body > div > div {
		@apply bg-background text-foreground;
	}

	h1 {
		@apply font-sans text-4xl font-black lg:text-5xl;
	}

	h2 {
		@apply font-sans text-3xl font-extrabold;
	}

	h3 {
		@apply font-sans text-2xl font-bold;
	}

	h4 {
		@apply font-sans text-xl font-bold;
	}

	p {
		@apply font-serif;
	}
}
